{{#has tag="service"}}
  {{#get "posts" filter="tags:{{tags.[1].name}}+id:-{{id}}"}}
    {{#if posts}}
      <h2>Referenzen</h2>
      <div class="apps">
        {{#foreach posts}}
          {{> "app"}}
        {{/foreach}}
      </div>
    {{/if}}
  {{/get}}
{{/has}}
