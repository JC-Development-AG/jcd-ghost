    {{#if posts}}
      <h2>Mehr zu diesem Thema</h2>
      <div class="apps">
        {{#foreach posts}}
          {{> "app"}}
        {{/foreach}}
      </div>
    {{/if}}
  {{/get}}
{{/has}}

